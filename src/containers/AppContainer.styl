*
    box-sizing border-box

//webfont('TUI', 'hinted-TUITypeCyrillicLight-Bold', true, 500, 'normal')

html
    font-family 'Roboto', sans-serif
    font-size 10px

body
    overflow hidden
    margin: 0px

input 
    background-color $back_color_3
    border: 1px solid #112c35
    padding: 2px 4px
    font-family: 'Roboto'
    font-size: 15px
    color: $text-color-2
    border-radius: 2px

.hidden
    display none !important

.clearfix
    &:before,
    &:after
        content ""
        display table

    &:after
        clear both

.AppContainer
    color $color-text
    background-color $back-color-2
    font-size $font-size-base
    min-height 100vh
    position relative
    overflow-x hidden
    &-content
        min-height "calc(100vh - %s - %s)" % ($header-height $footer-height)

