*
    box-sizing border-box

//webfont('TUI', 'hinted-TUITypeCyrillicLight-Bold', true, 500, 'normal')

html
    font-family 'Roboto', sans-serif
    font-size 10px

body
    overflow hidden
    margin: 0px

input 
    background-color $back_color_3
    border: 1px solid #112c35
    padding: 2px 4px
    font-family: 'Roboto'
    font-size: 15px
    color: $text-color-2
    border-radius: 2px

.hidden
    display none !important

.clearfix
    &:before,
    &:after
        content ""
        display table

    &:after
        clear both


a
    &.tooltip
        background gray
        text-decoration none
        color $color-text
        border-radius: 50%
        display inline-block
        padding-left: 4px
        width: 14px
        height: 14px
        font-size: 12px

        &:hover
            background $back-light
    
            span
                display inline
                position absolute
                background $back-color-2
                border: 1px solid #78799e;
                box-shadow: 2px 2px 5px 2px rgba(0,0,0,0.91);
                //color lightgray
                z-index 10000
    
        span
            display: none
            padding: 2px 3px 
            margin-left: 8px
            max-width: 200px

        &:hover
            background $back-color-2
            color $color-text


.AppContainer
    color $color-text
    background-color $back-color-2
    font-size $font-size-base
    min-height 100vh
    position relative
    overflow-x hidden
    &-content
        min-height "calc(100vh - %s - %s)" % ($header-height $footer-height)

