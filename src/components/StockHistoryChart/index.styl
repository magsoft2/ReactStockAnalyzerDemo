.stockchart
    &-control-panel
        //padding 20px
        font-size: 14px
        display: inline-flex
        flex-wrap: wrap
        //justify-content: flex-end
        width: 100%
        padding-bottom: 10px
        +tablet()
            font-size: 2rem
    
        &__title
            color: gray

            &:nth-child(n+2)
                margin-left 30px

                +tablet()
                    margin-left 0px
                    flex-basis: 100%
        
        &__action
            padding-left 7px
            color:royalblue
            text-decoration: underline
            cursor pointer 