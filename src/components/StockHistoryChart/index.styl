.stockchart
    font-size $font-size-small

    &-control-panel
        font-size: $font-size-base
        display: inline-flex
        flex-wrap: wrap
        width: 100%
        padding-bottom: 10px
    
        &__title
            color: gray

            &:nth-child(n+2)
                margin-left 30px

                +tablet()
                    margin-left 0px
                    flex-basis: 100%
        
        &__action
            padding-left 7px
            color:royalblue
            text-decoration: underline
            cursor pointer 