.header
    position relative
    width 100%
    height $header-height
    background $back-darker
    color $color2_new3
    font-size 1.6rem
    display: flex
    flex-direction: row

    &_menu_container
        height 100%
        display inline-flex
        flex-direction: column
        padding-left: 50px
        justify-content: space-between
        +tablet()
            padding-left: 10px

    &_caption
        font-size 42px
        padding-top: 20px

        +tablet()
            font-size: 22px
            padding-top 5px

    &_logo
        width 290px
        height $header-height

        img
            height: $header-height
            object-fit: cover
            width: 100%