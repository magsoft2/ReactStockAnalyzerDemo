.security-desc

    &__name
        font-size: $font-size-base
        flex-grow: 0

    &__btn
        //color: #808080
        font-size: $font-size-base
        display: inline-block
        cursor: pointer
        background-color: #808080
        border-radius: 50%
        width: 16px
        height: 16px
        text-align: center
        margin-right: 7px
        box-shadow: none
        flex-shrink: 0
        +tablet()
            width: 25px
            height: 25px
        
        &.collapsed
            background-color: #484848
            box-shadow: inset -1px -1px 3px 0px rgba(0,0,0,0.2)
    
    &__list
        font-size: $font-size-small
        padding 5px
        background-color: $back-color-2
        display: inline-flex
        flex-direction: column
        position: absolute
        top: 15px
        z-index: 10000
        left: 0px
        border: 1px solid #78799e
        box-shadow: 2px 2px 5px 2px rgba(0,0,0,0.91)
        min-width: 350px
        +tablet()
            left 0px
            top 10px
        
        &.collapsed
            display none

    &__row
        padding: 3px 0px
        display inline-flex

    &__cell
        &-name
            width 170px
            flex-shrink: 0
            word-break: break-word
            white-space: pre-wrap

        &-value
            padding-left 10px

    &__tooltip-container
        position absolute
        +tablet()
            position: absolute
            top: 20px
            left: 0px

