.stock-analysis

    padding: 20px
    +tablet()
        padding: 5px

    &__control_panel
        display: block
        border-bottom: 1px solid #284242
        padding-bottom: 5px

        &__separator
            border-left: 1px solid #284242
            padding-left: 10px
            +tablet()
                padding-left 0px
                border: 0px


    .stock-id-input
        padding-top:20px

    .btn
        min-width: 100px
        cursor: pointer
        /* color: gray; */
        display: inline-block
        //margin-top: 20px
        font-size: 16px
        height: 24px
        padding 0px 10px
        margin-left: 10px
        +tablet()
            margin-left: 0px
            padding 0px

        &:hover
            background: $dark-blue

    &_chart_container
        padding-top: 20px
